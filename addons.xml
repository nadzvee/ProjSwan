<addons>
<addon id="plugin.video.aftershock" name="Aftershock" version="5.0.0" provider-name="AftershockPY">
    <requires>
        <import addon="xbmc.python" version="2.19.0"/>
        <import addon="repository.aftershock" version="3.0.0"/>
        <import addon="script.module.urlresolver"  version="3.0.21"/>
		<import addon="script.module.metahandler"  version="1.0.0"/>
		<import addon="script.module.beautifulsoup" version="3.2.1"/>
        <import addon="script.aftershock.core" version="2.0.0"/>
        <import addon="script.aftershock.artwork" version="2.0.0"/>
        <!--<import addon="script.aftershocknow.guide" version="2.0.0"/>-->
    </requires>
    <extension point="xbmc.python.pluginsource" library="aftershock.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Watch Hindi Movies &amp; TV Shows</summary>
        <description lang="en">Addon to browse and play a wide selection of Desi Movies, TV Shows and Live Streams. The author doesn't have any affiliation with the content providers nor uploads any content to the providers.</description>
        <disclaimer lang="en">The content provided in this application is available free on public domain. We do not host any content. We are just providing the way to stream and all content is the copyright of their owner. The author does not have any affiliation with the content providers.</disclaimer>
        <platform>all</platform>
        <forum></forum>
	    <website></website>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
            <screenshot>resources/screenshots/screenshot-01.png</screenshot>
            <screenshot>resources/screenshots/screenshot-02.png</screenshot>
            <screenshot>resources/screenshots/screenshot-03.png</screenshot>
        </assets>
        <news>- Added / Updated Providers [CR]
            - Updated Metadata Handling [CR]
            - Updated Resolvers [CR]
            - Added Resolvers</news>
  </extension>
</addon>

